<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:background="#cccc99"  
    android:orientation="vertical" >  
    <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" 
        android:background="#fa8072"  
        android:orientation="horizontal" > 
        <ImageView
          	android:id="@+id/singup_back"
          	android:layout_marginLeft="10dp"
          	android:layout_marginTop="5dp"
          	android:layout_marginBottom="5dp"
          	android:layout_width="30dp"
          	android:layout_height="30dp"
          	android:src="@drawable/left_arrow" />
        <TextView  
        	android:layout_width="wrap_content"  
        	android:layout_height="wrap_content"  
        	android:text=" 注册设置  "  
        	android:layout_marginLeft="100dp"
        	android:layout_gravity="center_vertical|center_horizontal"
        	android:textColor="#ffffff"  
        	android:textSize="20sp" />  
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >
         	<TextView
          		android:layout_marginLeft="20dp"
          		android:layout_marginTop="4dp"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:textColor="#333333" 
          		android:layout_gravity="center_vertical"
          		android:textSize="20sp"
          		android:text=" 头像: " />
         	<ImageView
          		android:id="@+id/user_pic"
          		android:layout_marginLeft="60dp"
          		android:layout_marginTop="5dp"
          		android:layout_marginBottom="5dp"
          		android:layout_width="120dp"
          		android:layout_gravity="center_vertical|center_horizontal"
          		android:layout_height="120dp"
          		android:src="@drawable/toux" />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >
            <TextView
          		android:id="@+id/nickname"
          		android:layout_marginLeft="20dp"
          		android:layout_marginTop="4dp"
          		android:layout_width="60dp"
          		android:layout_height="35dp"
          		android:textColor="#333333" 
          		android:layout_gravity="center_vertical"
          		android:textSize="20sp"
          		android:text=" 昵 称: " />
        	<EditText
          		android:id="@+id/nicknameET"
          		android:layout_width="wrap_content"
          		android:layout_height="35dp"
          		android:layout_marginLeft="10dp"
          		android:background="@null"
          		android:layout_gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    <ImageView   
        	android:layout_width="fill_parent"  
        	android:layout_height="1dp" 
        	android:layout_marginLeft="65dp"
        	android:layout_marginRight="10dp"
        	android:layout_marginTop="2dp"
        	android:background="#000000"/>
    <LinearLayout android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >
            <TextView
          		android:layout_marginLeft="20dp"
          		android:layout_marginTop="4dp"
          		android:layout_width="wrap_content"
          		android:layout_height="35dp"
          		android:textColor="#333333" 
          		android:layout_gravity="center_vertical"
          		android:textSize="20sp"
          		android:text=" 汉子  Or 妹子 : " />
            <RadioGroup 
        		android:id="@+id/sex"
        		android:orientation="horizontal"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">
        		<RadioButton 
            		android:id="@+id/male"
            		android:layout_marginLeft="10dp"
            		android:textSize="20sp"
            		android:text="汉子"/>
        		<RadioButton 
            		android:id="@+id/female"
            		android:layout_marginLeft="20dp"
            		android:textSize="20sp"
            		android:text="妹子"/>
    		</RadioGroup>
    </LinearLayout>
    <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp" 
        android:layout_weight="1" 
        android:orientation="horizontal" >  
  		<TextView
          	android:layout_marginLeft="20dp"
          	android:layout_marginTop="40dp"
          	android:layout_width="wrap_content"
          	android:layout_height="35dp"
          	android:textColor="#333333" 
          	android:textSize="20sp"
          	android:text=" 老 家: " />
        <kankan.wheel.widget.WheelView  
            android:id="@+id/id_province"  
            android:layout_width="0dp"  
            android:layout_height="wrap_content"  
            android:layout_weight="1" >  
        </kankan.wheel.widget.WheelView>  
  
        <kankan.wheel.widget.WheelView  
            android:id="@+id/id_city"  
            android:layout_width="0dp"  
            android:layout_height="wrap_content" 
            android:layout_weight="1" >  
        </kankan.wheel.widget.WheelView>  
  
        <kankan.wheel.widget.WheelView  
            android:id="@+id/id_area"  
            android:layout_width="0dp"  
            android:layout_height="wrap_content" 
            android:layout_weight="1" >  
        </kankan.wheel.widget.WheelView>  
    </LinearLayout>  
    <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:orientation="vertical">
    <Button   
        android:onClick="showChoose"  
        android:layout_gravity="center"  
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="270dp" 
        android:layout_height="wrap_content"
        android:background="@drawable/button_circ"  
        android:textSize="20sp"
        android:textColor="#ffffff" 
        android:text="确 定"  
        />  
     </LinearLayout>
</LinearLayout>  